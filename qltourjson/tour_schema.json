{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "maTour": {
      "type": "string",
      "pattern": "^[A-Za-z0-9\\_]+$",
      "description": "Mã tour, ví dụ T001",
      "maxLength": 10
    },
    "tenHdv": {
      "type": "string",
      "description": "Tên hướng dẫn viên",
      "maxLength": 50
    },
    "tenTour": {
      "type": "string",
      "maxLength": 50
    },
    "moTa": {
      "type": "string",
      "maxLength": 255

    },
    "ngayBatDau": {
      "type": "string",
      "format": "date",
      "description": "YYYY-MM-DD"
    },
    "ngayKetThuc": {
      "type": "string",
      "format": "date",
      "description": "YYYY-MM-DD"
    },
    "lichTrinh": {
      "type": "string",
      "maxLength": 255
    },
    "dsDiaDiem": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "maxLength": 50
      }
    }
  },
  "required": [
    "maTour",
    "tenHdv",
    "tenTour",
    "ngayBatDau",
    "ngayKetThuc",
    "lichTrinh",
    "dsDiaDiem"
  ]
}