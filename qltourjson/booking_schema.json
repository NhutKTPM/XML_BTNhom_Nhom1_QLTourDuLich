{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "maTour": {
      "type": "string",
      "pattern": "^[A-Za-z0-9\\_]+$",
      "maxLength": 10
    },
    "tenTour": {
      "type": "string",
      "maxLength": 50
    },
    "dsBooking": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "maBooking": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\_]+$",
            "maxLength": 10
          },
          "maKhachHang": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\_]+$",
            "maxLength": 10
          },
          "thoiGianDat": {
            "type": "string",
            "format": "date"
          },
          "trangThai": {
            "type": "string",
            "enum": [
              "Đã xác nhận",
              "Đã thanh toán",
              "Đã đặt",
              "Đã hủy",
              "Đã hoàn tiền"
            ]
          },
          "soTien": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
          },
          "phuongThucThanhToan": {
            "type": "string",
            "enum": [
              "Tiền mặt",
              "Chuyển khoản",
              "Ví điện tử"
            ]
          },
          "noidungdanhgia": {
            "type": "string",
            "maxLength": 255
          },
          "diemdanhgia": {
            "type": "number",
            "minimum": 1,
            "maximum": 5
          },
          "DSChiTietBooking": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "maChiTietBooking": {
                  "type": "string",
                  "pattern": "^[A-Za-z0-9\\_]+$",
                  "maxLength": 10
                },
                "hoTenNguoiDi": {
                  "type": "string",
                  "maxLength": 50
                },
                "ngaySinh": {
                  "type": "string",
                  "format": "date"
                },
                "gioiTinh": {
                  "type":"string",
                  "enum": [
                    "Nam",
                    "Nữ"
                  ]
                },
                "loaiKhachHang": {
                  "type": "string",
                  "enum": [
                    "Người lớn",
                    "Trẻ em",
                    "Sinh viên"
                  ]
                },
                "ghiChu": {
                  "type": "string",
                  "maxLength": 255
                }
              },
              "required": [
                "maChiTietBooking",
                "hoTenNguoiDi",
                "ngaySinh",
                "gioiTinh",
                "loaiKhachHang"
              ]
            }
          }
        },
        "required": [
          "maBooking",
          "maKhachHang",
          "thoiGianDat",
          "trangThai",
          "soTien",
          "phuongThucThanhToan",
          "DSChiTietBooking"
        ]
      }
    }
  },
  "required": [
    "maTour",
    "tenTour",
    "dsBooking"
  ]
}